  @@map("meal_templates")
}

// --- Calendar Integration ---

enum CalendarProvider {
  GOOGLE @map("google")
  APPLE  @map("apple")
}

enum SyncEventType {
  MEDICATION  @map("medication")
  CARE_TASK   @map("care_task")
  APPOINTMENT @map("appointment")
}

// Stores OAuth connection details for external calendars
model CalendarConnection {
  id             String            @id @default(uuid())
  userId         String?           @map("user_id") // null = family-wide connection
  familyId       String            @map("family_id")
  provider       CalendarProvider
  accessToken    String            @map("access_token") // Will be encrypted in application layer
  refreshToken   String?           @map("refresh_token") // Will be encrypted in application layer
  expiresAt      DateTime?         @map("expires_at")
  calendarId     String            @map("calendar_id") // External calendar ID
  calendarName   String?           @map("calendar_name")
  syncEnabled    Boolean           @default(true) @map("sync_enabled")
  syncEventTypes SyncEventType[]   @map("sync_event_types") // Which event types to sync
  lastSyncAt     DateTime?         @map("last_sync_at")
  lastSyncStatus String?           @map("last_sync_status") // success, error, partial
  createdAt      DateTime          @default(now()) @map("created_at")
  updatedAt      DateTime          @updatedAt @map("updated_at")
  user           User?             @relation(fields: [userId], references: [id], onDelete: Cascade)
  family         Family            @relation(fields: [familyId], references: [id], onDelete: Cascade)
  syncLogs       CalendarSyncLog[]

  @@index([userId, syncEnabled])
  @@index([familyId, syncEnabled])
  @@map("calendar_connections")
}

// Audit trail for calendar sync operations
model CalendarSyncLog {
  id              String             @id @default(uuid())
  connectionId    String             @map("connection_id")
  eventType       SyncEventType      @map("event_type")
  internalEventId String             @map("internal_event_id") // CareTask, Medication, etc ID
  externalEventId String?            @map("external_event_id") // Google/Apple event ID
  action          String // created, updated, deleted
  status          String // success, error
  errorMessage    String?            @map("error_message")
  syncedAt        DateTime           @default(now()) @map("synced_at")
  connection      CalendarConnection @relation(fields: [connectionId], references: [id], onDelete: Cascade)

  @@index([connectionId, syncedAt(sort: Desc)])
  @@index([internalEventId])
  @@index([externalEventId])
  @@map("calendar_sync_logs")
}

// --- AI Chat Conversations ---

model Conversation {
  id                String        @id @default(uuid())
  familyId          String        @map("family_id")
  userId            String        @map("user_id")
  title             String? // Auto-generated from first message or user-set
  createdAt         DateTime      @default(now()) @map("created_at")
  updatedAt         DateTime      @updatedAt @map("updated_at")
  loggedToJournalAt DateTime?     @map("logged_to_journal_at") // When this conversation was logged to journal
  messages          ChatMessage[]

  @@index([familyId, updatedAt(sort: Desc)])
  @@index([userId])
  @@map("conversations")
}

model ChatMessage {
  id             String       @id @default(uuid())
  conversationId String       @map("conversation_id")
  role           MessageRole
  content        String
  citations      Json? // Stores citation references used in this message
  attachments    Json? // Stores file attachments [{type: 'image'|'document', url: string, mimeType: string, name: string}]
  tokenCount     Int?         @map("token_count")
  createdAt      DateTime     @default(now()) @map("created_at")
  conversation   Conversation @relation(fields: [conversationId], references: [id], onDelete: Cascade)

  @@index([conversationId, createdAt])
  @@map("chat_messages")
}

enum MessageRole {
  USER      @map("user")
  ASSISTANT @map("assistant")
  SYSTEM    @map("system")
}
